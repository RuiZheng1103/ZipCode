package com.rui.zipcode;

import org.junit.*;
import static com.rui.zipcode.ZipCodeMerge.*;

import java.util.Arrays;
public class ZipCodeMergeTest {

	@Test(expected = IllegalArgumentException.class)
	public void illegalInput() {
		merge(null);
	}
	
	@Test
	public void mergePassCase() {
		int[][] nums1 = {{10000, 60000}};		
		int[][] res1 = merge(new int[][]{{10000,20000},{10000,40000},{30000,60000}});	
		assert(Arrays.deepEquals(res1, nums1));
		
		int[][] nums2 = {{10000, 20000},{70000,70000}};		
		int[][] res2 = merge(new int[][]{{19000,20000},{10000,20000},{70000,70000}});	
		assert(Arrays.deepEquals(res2, nums2));
		
		int[][] nums3 = {{10000, 20000},{30000,40000},{50000,60000}};		
		int[][] res3 = merge(new int[][]{{50000,60000},{30000,40000},{10000, 20000}});	
		assert(Arrays.deepEquals(res3, nums3));
	}
}
